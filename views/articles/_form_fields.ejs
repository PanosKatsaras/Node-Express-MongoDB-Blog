<style>
    .card-header{
    background-color: #dcb877 !important;
    }
    .card-body{
            background-color: #eed29e !important;
        }
    .btn-secondary{
        color: white;
        background-color: #8c8b93 !important;
        border: none !important;
    }
    .btn-success{
        background-color: #7f9c3b !important;
        border: none !important;
    }

    .btn:hover{
        opacity: 0.8 !important; 
    }
</style>

<div class="form-group fw-bold">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group fw-bold">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group fw-bold">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<a href="/" class="btn btn-secondary mt-4">Cancel</a>
<button type="submit" class="btn btn-success mt-4">Save</button>

